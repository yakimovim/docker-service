@model Service.Controllers.EnvironmentType[];
@{
    Layout = "_Layout";
}

@foreach (var environmentType in Model)
{
    var environmentTableId = "environmentTypeTable" + environmentType.Name;

    <h2><a data-bs-toggle="collapse" href="#@environmentTableId">@environmentType.Name</a></h2>

    <table class="table table-striped table-bordered collapse show" id="@environmentTableId">
        <tbody>
            @foreach (var environmentVariable in environmentType.Variables)
            {
                <tr>
                    <td>@environmentVariable.Name</td>
                    <td>@environmentVariable.Value</td>
                </tr>
            }

        </tbody>
    </table>
}
